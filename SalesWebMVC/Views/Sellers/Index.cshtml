@model IEnumerable<Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>
<p>Sellers index page</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.BaseSalary)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => seller.Name)</td>
                <td>@Html.DisplayFor(modelItem => seller.Email)</td>
                <td>@Html.DisplayFor(modelItem => seller.BirthDate)</td>
                <td>@Html.DisplayFor(modelItem => seller.BaseSalary)</td>

                <td> <a asp-action="Edit" asp-route-id="id" asp-route-id="@seller.Id">Edit</a> | 
                    <a asp-action="Details" asp-route-id="id" asp-route-id="@seller.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="id" asp-route-id="@seller.Id">Delete</a>"</td>
            </tr>
        }
    </tbody>
</table>

